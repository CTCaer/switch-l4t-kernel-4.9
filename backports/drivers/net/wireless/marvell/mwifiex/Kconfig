config BACKPORT_MWIFIEX
	tristate "Marvell WiFi-Ex Driver"
	depends on !MWIFIEX
	depends on BACKPORT_CFG80211
	---help---
	  This adds support for wireless adapters based on Marvell
	  802.11n/ac chipsets.

	  If you choose to build it as a module, it will be called
	  mwifiex.

config BACKPORT_MWIFIEX_SDIO
	tristate "Marvell WiFi-Ex Driver for SD8786/SD8787/SD8797/SD8887/SD8897/SD8997"
	depends on !MWIFIEX_SDIO
	depends on BACKPORT_MWIFIEX && MMC
	depends on FW_LOADER
	depends on WANT_DEV_COREDUMP
	---help---
	  This adds support for wireless adapters based on Marvell
	  8786/8787/8797/8887/8897/8997 chipsets with SDIO interface.

	  If you choose to build it as a module, it will be called
	  mwifiex_sdio.

config BACKPORT_MWIFIEX_PCIE
	tristate "Marvell WiFi-Ex Driver for PCIE 8766/8897/8997"
	depends on !MWIFIEX_PCIE
	depends on BACKPORT_MWIFIEX && PCI
	depends on FW_LOADER
	depends on WANT_DEV_COREDUMP
	---help---
	  This adds support for wireless adapters based on Marvell
	  8766/8897/8997 chipsets with PCIe interface.

	  If you choose to build it as a module, it will be called
	  mwifiex_pcie.

config BACKPORT_MWIFIEX_USB
	tristate "Marvell WiFi-Ex Driver for USB8766/8797/8997"
	depends on !MWIFIEX_USB
	depends on BACKPORT_MWIFIEX && USB
	depends on FW_LOADER
	---help---
	  This adds support for wireless adapters based on Marvell
	  8797/8997 chipset with USB interface.

	  If you choose to build it as a module, it will be called
	  mwifiex_usb.
